# This is an example .goreleaser.yml file with some sensible defaults.
# Make sure to check the documentation at https://goreleaser.com

# The lines below are called `modelines`. See `:help modeline`
# Feel free to remove those if you don't want/need to use them.
# yaml-language-server: $schema=https://goreleaser.com/static/schema.json
# vim: set ts=2 sw=2 tw=0 fo=cnqoj

version: 1

env:
  - BUILD_ENV={{ template_code `{{if index .Env "BUILD_ENV"}}{{.Env.BUILD_ENV}}{{else}}production{{end}}` }}

before:
  hooks:
    # You may remove this if you don't use go modules.
    - go mod tidy

builds:
  - env:
      - CGO_ENABLED=0
    goos:
      - linux
      - darwin
    ldflags:
      - -X github.com/{{ .GithubRepo }}/generated/buildinfo.buildDate={{`{{.CommitDate}}`}}
      - -X github.com/{{ .GithubRepo }}/generated/buildinfo.buildVersion={{`{{.Version}}`}}
      - -X github.com/{{ .GithubRepo }}/generated/buildinfo.commit={{`{{.ShortCommit}}`}}
    tags:
      - {{ template_code `"{{.Env.BUILD_ENV}}"` }}

archives:
  - format: tar.gz
    files: [only-the-binary*]
    # this name template makes the OS and Arch compatible with the results of `uname`.
    name_template: >-
      {{ template_code `{{ .ProjectName }}_
      {{- title .Os }}_
      {{- if eq .Arch "amd64" }}x86_64
      {{- else if eq .Arch "386" }}i386
      {{- else }}{{ .Arch }}{{ end }}
      {{- if .Arm }}v{{ .Arm }}{{ end }}`}}
    # use zip for windows archives
    format_overrides:
      - goos: windows
        format: zip

changelog:
  sort: asc
  filters:
    exclude:
      - "^docs:"
      - "^test:"
